type MoviesResponse {
    page : Int
    results : [Movie]
    total_pages : Int
    total_results : Int
}

type Movie {
	id: Int
	poster_path : String
	overview: String
	release_date: String
	vote_average: Float
	original_title: String
}

type ReviewResponse {
	page: Int
	results: [Review]
	total_pages : Int
	total_Results : Int
}

type Review {
	author : String
    content : String
    created_at : String
    id : ID    
}

type MovieBooking {
	id : ID
	first_name : String
	last_name : String
	email: String
	number_of_seats : Int
	date : String
	movie : Movie
	status : String
}

input MovieBookingRequest {
	first_name : String
	last_name : String
	email: String
	number_of_seats : Int
	date : String
	movie : MovieRefRequest
}

input MovieRefRequest {
	id: Int
	title : String
	poster_path : String
}

type MovieRefResponse {
	id: Int
	title : String
	poster_path : String
}

type MovieBookingResponse {
	id: ID
	first_name : String
	last_name : String
	email: String
	number_of_seats : Int
	date : String
	movie : MovieRefResponse
	status : String
}